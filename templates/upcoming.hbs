{{>header}}
<div class="py-5"></div>
{{#if events}}
<div class="container py-5">
      <h1 class="py-2">Performances</h1>
      <table class="table table-light table-hover">
            <thead class="thead-dark">
                  <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Event</th>
                        <th scope="col" class="d-none d-md-table-cell">Location</th>
                        <th scope="col" class="d-none d-md-table-cell">Venue</th>
                        <th scope="col" class="d-none d-md-table-cell">Tickets</th>
                        <th scope="col">More</th>

                  </tr>
            </thead>
            <tbody>
                  {{#each events}}
                  <tr>
                        <th scope="row"><span>{{this.date}}</span><br /><span>{{this.time}}</span></th>
                        <td><span class="font-italic">{{this.eventName}}</span><br /><span>{{this.groupName}}</span>
                        </td>
                        <td class="d-none d-md-table-cell">{{this.location}}</td>
                        <td class="d-none d-md-table-cell">{{this.venue}}</td>
                        <td class="d-none d-md-table-cell">
                              <a type="button" class="btn btn-dark btn-sm" href="{{this.eventUrl}}"
                                    target="_blank">Tickets</a>
                        </td>
                        <td>
                              <a type="button" class="btn btn-sm btn-dark lite-text" data-toggle="modal" data-target="#eventModal"
                                    data-event-name="{{this.eventName}}" data-alt="{{this.alt}}"
                                    data-map-coordinates="{{this.mapCoordinates}}" data-group-name="{{this.groupName}}"
                                    data-date="{{this.date}}" data-time="{{this.time}}"
                                    data-date-time="{{this.dateTime.seconds}}" data-event-url="{{this.eventUrl}}"
                                    data-location="{{this.venue}}, {{this.location}}">Details
                              </a>
                        </td>
                  </tr>
                  {{/each}}
            </tbody>
      </table>
</div>
{{else}}
<div class="container p-5 h-75">
      <h1 class="py-2">Performances</h1>
      <h4 class="py-2">No events found. Please check back later.</h4>
</div>
{{/if}}
<!-- Modal -->
{{>modal}}
{{>footer}}