{{>header}}
<div class="container-fluid h-75 bg-image">
      <div class="row h-100">
            <div class="text-center text-white my-auto col-md-4 offset-md-8">
                  <h1>Toma Iliev</h1>
                  <h3>Historical Strings</h3>
            </div>
      </div>
</div>
<div class="spacer"></div>
<div class="container section-container snaptarget">
      <div class="row">
            <div id="home-bio" class="col-md-8 pr-4">
                  <h3>Bio</h3>
                  <p>{{miniBio}}</p>
                  <div class="scroll-aid"></div>
                  <a type="button" class="btn btn-dark btn-sm" href="#/about">Continue reading &#187;</a>
            </div>
            {{#if featuredRec}}
            <div class="col-md-3 border-left d-md-block">
                  <h3 class="my-3">Featured recording</h3>
                  <div class="card" style="width: 16rem;">
                        <div class="img-restrain">
                              <a href="{{featuredRec.infoUrl}}" target="_blank">
                                    <img class="card-img-top" src="{{featuredRec.imageUrl}}" alt="CD cover">
                              </a>
                        </div>
                        <div class="card-body card-home">
                              <a type="button" href="{{featuredRec.cdUrl}}" target="_blank"
                                    class="btn btn-dark btn-sm">Buy CD</a>
                              <a type="button" href="#/disco" class="btn btn-dark btn-sm">More CDs</a>
                        </div>
                  </div>
            </div>
            {{/if}}
      </div>
</div>
<div class="container-fluid bg-dark text-white py-5 snaptarget mt-3">
      <div class="row">
            <div class="container">
                  <h3 class="pb-3">Upcoming events</h3>
                  {{#if events}}
                  <table class="table table-dark table-hover">
                        <thead>
                              <tr>
                                    <th scope="col">Date</th>
                                    <th scope="col">Event</th>
                                    <th scope="col" class="d-none d-md-table-cell">Location</th>
                                    <th scope="col" class="d-none d-md-table-cell">Venue</th>
                                    <th scope="col">More</th>
                              </tr>
                        </thead>
                        <tbody>
                              {{#each events}}
                              <tr>
                                    <th scope="row"><span>{{this.date}}</span><br /><span>{{this.time}}</span></th>
                                    <td><span
                                                class="font-italic">{{this.eventName}}</span><br /><span>{{this.groupName}}</span>
                                    </td>
                                    <td class="d-none d-md-table-cell">{{this.location}}</td>
                                    <td class="d-none d-md-table-cell">{{this.venue}}</td>
                                    <td>
                                          <button type="button" class="btn btn-light btn-sm" data-toggle="modal"
                                                data-target="#eventModal" data-event-name="{{this.eventName}}"
                                                data-alt="{{this.alt}}" data-map-coordinates="{{this.mapCoordinates}}"
                                                data-group-name="{{this.groupName}}" data-date="{{this.date}}"
                                                data-time="{{this.time}}" data-date-time="{{this.dateTime}}"
                                                data-event-url="{{this.eventUrl}}"
                                                data-location="{{this.venue}}, {{this.location}}">
                                                Details
                                          </button>
                                    </td>
                              </tr>
                              {{/each}}
                        </tbody>
                  </table>
                  <a type="button" class="btn btn-light btn-sm" href="#/upcoming">Continue browsing &#187;</a>
                  {{else}}
                  <h4>No events found <i class="fas fa-heart-broken"></i></h4>
                  {{/if}}
            </div>
      </div>
</div>
<div class="container py-5 bg-light snaptarget">
      <h3>Featured media</h3>
      <div class="row py-3">
            {{#if featuredAudio}}
            <div class="col-md-6">
                  <div class="card" style="width: 18rem;">
                        <div class="embed-responsive embed-responsive-16by9">
                              <iframe loading="lazy" scrolling="no" class="card-img-top" frameborder="no"
                                    allow="autoplay" src="{{featuredAudio.audioUrl}}"></iframe>
                              <div class="spinner-border" role="status">
                                    <span class="sr-only">Loading...</span>
                              </div>
                        </div>
                        <div class="card-body">
                              <p class="card-text">{{featuredAudio.title}}</p>
                              <p class="card-text text-secondary">{{featuredAudio.description}}</p>
                        </div>
                  </div>
                  <div style="width: inherit;" class="mx-auto pt-3 pb-5"><a type="button" class="btn btn-dark btn-sm"
                              href="#/audio">Continue listening &#187;</a>
                  </div>
            </div>
            {{else}}
            {{/if}}
            {{#if featuredVideo}}
            <div class="col-md-6 yt-embed">
                  <div class="card" style="width: 18rem;">
                        <div class="embed-responsive embed-responsive-16by9 video-placeholder"
                              data-yt-url="{{featuredVideo.videoUrl}}" style="background-image: url('https://tomailiev.com/pics/yt-resources/{{featuredVideo.dir}}/sddefault.jpg');">
                              {{!-- <iframe loading="lazy" class="card-img-top" src="{{featuredVideo.videoUrl}}"
                                    frameborder="0" allow="autoplay; encrypted-media;" allowfullscreen></iframe> --}}
                              <a href="{{featuredVideo.channelUrl}}" target="_blank" class="channel-image" style="background-image: url('https://tomailiev.com/pics/yt-resources/{{featuredVideo.dir}}/channel.jpeg');"></a>
                              <button class="ytp-large-play-button ytp-button" aria-label="Play"><svg height="100%"
                                          version="1.1" viewBox="0 0 68 48" width="100%">
                                          <path class="ytp-large-play-button-bg"
                                                d="M66.52,7.74c-0.78-2.93-2.49-5.41-5.42-6.19C55.79,.13,34,0,34,0S12.21,.13,6.9,1.55 C3.97,2.33,2.27,4.81,1.48,7.74C0.06,13.05,0,24,0,24s0.06,10.95,1.48,16.26c0.78,2.93,2.49,5.41,5.42,6.19 C12.21,47.87,34,48,34,48s21.79-0.13,27.1-1.55c2.93-0.78,4.64-3.26,5.42-6.19C67.94,34.95,68,24,68,24S67.94,13.05,66.52,7.74z"
                                                fill="#f00"></path>
                                          <path d="M 45,24 27,14 27,34" fill="#fff"></path>
                                    </svg>
                              </button>
                              {{!-- <div class="spinner-border" role="status">
                                    <span class="sr-only">Loading...</span>
                              </div> --}}
                        </div>
                        <div class="card-body">
                              <p class="card-text">{{featuredVideo.title}}</p>
                              <p class="card-text text-secondary">{{featuredVideo.description}}</p>
                        </div>
                  </div>
                  <div style="width: inherit;" class="mx-auto pt-3 pb-5"><a type="button" class="btn btn-dark btn-sm"
                              href="#/video">Continue watching &#187;</a>
                  </div>
            </div>
            {{else}}
            {{/if}}
      </div>
</div>

<!-- Modal -->
{{>modal}}
{{>footer}}