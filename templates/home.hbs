{{>header}}
<div class="h-75 bg-image">
      <div class="py-5"></div>
      <div class="py-5"></div>
      <div class="py-5"></div>

      <div class="container text-center text-white">
            <div class="row align-items-center">
                  <div class="col-lg-4 offset-lg-8">
                        <h1>Toma Iliev</h1>
                        <h3>Historical Strings</h3>
                  </div>
            </div>
      </div>
</div>
<div class="container py-5">
      <div class="row">
            <div id="home-bio" class="col-md-8">
                  <h3>Bio</h3>
                  <p>{{miniBio}}</p>
                  <a type="button" class="btn btn-dark btn-sm" href="#/about">Continue reading</a>
            </div>
            <div class="col-md-3 border-left d-none d-md-block pl-4">
                  <h3 class="pb-3">Latest event</h3>
                  <div class="card" style="width: 18rem;">
                        <div class="card-body">
                              <h5 class="card-title font-italic">{{latest.eventName}}</h5>
                              <h6 class="card-subtitle mb-2 text-muted">{{latest.groupName}}</h6>
                              <p class="card-text">{{latest.date}}: {{latest.location}}</p>
                              <a type="button" class="btn btn-dark btn-sm" data-toggle="modal"
                                    data-target="#modal{{latest.objectId}}">
                                    Details
                              </a>
                              <a type="button" href="{{latest.eventUrl}}" target="blank"
                                    class="btn btn-dark btn-sm card-link">Buy
                                    tickets</a>
                        </div>
                  </div>
            </div>
      </div>
</div>
<div class="container-fluid bg-dark text-white py-5">
      <div class="row">
            <div class="container">
                  <h3 class="pb-3">Upcoming events</h3>
                  <table class="table table-dark table-hover">
                        <thead>
                              <tr>
                                    <th scope="col">Date</th>
                                    <th scope="col">Event</th>
                                    <th scope="col" class="d-none d-md-table-cell">Location</th>
                                    <th scope="col" class="d-none d-md-table-cell">Venue</th>
                                    <th scope="col">More</th>
                              </tr>
                        </thead>
                        <tbody>
                              {{#each events}}
                              <tr>
                                    <th scope="row"><span>{{this.date}}</span><br /><span>{{this.time}}</span></th>
                                    <td><span
                                                class="font-italic">{{this.eventName}}</span><br /><span>{{this.groupName}}</span>
                                    </td>
                                    <td class="d-none d-md-table-cell">{{this.location}}</td>
                                    <td class="d-none d-md-table-cell">{{this.venue}}</td>
                                    <td>
                                          <a type="button" class="btn btn-light btn-sm" href="{{this.eventUrl}}"
                                                target="_blind">Tickets</a>
                                    </td>
                              </tr>
                              {{/each}}
                        </tbody>
                  </table>
                  <a type="button" class="btn btn-light btn-sm" href="#/upcoming">Continue browsing</a>
            </div>
      </div>
</div>
<div class="container py-5 bg-light">
      <h3>Latest media</h3>
      <div class="row py-3">
            <div class="col-md-6">
                  <div class="card" style="width: 18rem;">
                        <iframe scrolling="no" class="card-img-top" frameborder="no" allow="autoplay"
                              src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/632188155&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true&visual=true"></iframe>
                        <div class="card-body">
                              <p class="card-text">Some quick example text to build on the card title and make up the
                                    bulk of the card's content.</p>
                        </div>
                  </div>
                  <div style="width: inherit;" class="mx-auto pt-3 pb-5"><a type="button" class="btn btn-dark btn-sm"
                              href="#/audio">Continue listening</a></div>
            </div>
            <div class="col-md-6">
                  <div class="card" style="width: 18rem;">
                        <iframe class="card-img-top" src="https://www.youtube.com/embed/vKzPIB7o9GM" frameborder="0"
                              allow="autoplay; encrypted-media;" allowfullscreen></iframe>
                        <div class="card-body">
                              <p class="card-text">Some quick example text to build on the card title and make up the
                                    bulk of the card's content.</p>
                        </div>
                  </div>
                  <div style="width: inherit;" class="mx-auto pt-3 pb-5"><a type="button" class="btn btn-dark btn-sm"
                              href="#/video">Continue watching</a></div>
            </div>
      </div>
</div>
<!-- Modal -->
<div class="modal fade" id="modal{{latest.objectId}}" tabindex="-1" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                  <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">{{latest.eventName}}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                        </button>
                  </div>
                  <div class="modal-body">
                        <div class="container-fluid">
                              <div class="row">
                                    <div class="col-7">
                                          {{#if latest.alt}}
                                          <p>{{latest.alt}}</p>
                                          {{else}}
                                          <div class="embed-responsive embed-responsive-1by1">
                                                <iframe src="{{latest.mapCoordinates}}" frameborder="0"
                                                      style="border:0;" allowfullscreen="false" aria-hidden="false"
                                                      tabindex="0"></iframe>
                                          </div>
                                          {{/if}}
                                    </div>
                                    <div class="col-5">
                                          <div class="card">
                                                <div class="card-body">
                                                      <h5 class="card-title">{{latest.groupName}}</h5>
                                                      <p class="card-text">{{latest.date}} - {{latest.time}}</p>
                                                      <a href="{{latest.eventUrl}}" target="blank" class="btn btn-dark btn-sm">Tickets</a>
                                                </div>
                                          </div>
                                    </div>
                              </div>
                        </div>
                  </div>
                  <div class="modal-footer">
                        <button type="button" class="btn btn-sm btn-dark float-left" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-sm btn-dark">Add to calendar</button>
                  </div>
            </div>
      </div>
</div>
{{>footer}}