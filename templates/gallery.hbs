{{>header}}
<div class="container">
  <div class="p-5"></div>
  <h1 class="text-center">photos</h1>
  <div class="col-md-10 offset-md-1">
    <div id="carouselExampleIndicators" class="carousel slide pb-5" data-ride="carousel" data-interval="3000">
      <ol class="carousel-indicators">
        {{#each indexes}}
        {{#if this}}
        <li data-target="#carouselExampleIndicators" data-slide-to="{{this}}"></li>
        {{else}}
        <li data-target="#carouselExampleIndicators" data-slide-to="{{this}}" class="active"></li>
        {{/if}}
        {{/each}}
      </ol>
      <div class="carousel-inner">
        {{#each items}}
        {{#if this.index}}
        <div class="carousel-item">
          {{else}}
          <div class="carousel-item active">
            {{/if}}
            <img class="d-flex w-100" src="{{this.imageUrl}}" alt="First slide">
            <div class="carousel-caption text-{{this.captionColor}} d-none d-md-block">
              <h5>{{this.captionTitle}}</h5>
              <p>{{this.caption}}</p>
            </div>
          </div>
          {{/each}}
