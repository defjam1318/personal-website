{{>header}}
<div class="p-5"></div>
{{#if pics}}
<div class="container py-2">
  {{!-- <div class="col-md-10 offset-md-1"> --}}
    <h1>Photos</h1>
    <div class="gallery">
      {{#each pics}}
      <img id="image-{{this.index}}" src="{{this.imageUrl}}" class="hidden"></img>
      <div id="caption-{{this.index}}" class="caption hidden">{{this.caption}}</div>
      {{/each}}
      <a class="carousel-control-prev" role="button">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" role="button">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  {{!-- </div> --}}
</div>
{{else}}
<div class="container py-2 h-75">
  <h1>Photos</h1>
  <h4 class="py-2">No pics found. Please check back later.</h4>
</div>
{{/if}}
{{>footer}}