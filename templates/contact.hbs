{{>header}}
<div class="col-md-6 container p-5">
  <div class="p-5"></div>

  <h2>Contact Us</h2>
  <p> Please send your message below. </p>

  <form role="form" method="post" action="#/message">
    <div class="row">
      <div class="col-sm-6 form-group">
        <label for="name"> Name:</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="col-sm-6 form-group">
        <label for="email"> Email:</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 form-group">
        <label for="message"> Message:</label>
        <textarea class="form-control" type="textarea" name="message" id="message" maxlength="6000" rows="6"></textarea>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 offset-sm-10 form-group">
        <button type="submit" class="btn btn-outline-info" data-toggle="button">Send</button>
      </div>
    </div>
  </form>
  <div id="success_message" style="width:100%; height:100%; display:none; ">
    <h3>Posted your message successfully!</h3>
  </div>
  <div id="error_message" style="width:100%; height:100%; display:none; ">
    <h3>Error</h3> Sorry there was an error sending your form.
  </div>
</div>
<div class="p-4"></div>
{{>footer}}