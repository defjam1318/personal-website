{{>header}}
<div class="col-md-6 container p-5">
  <div class="p-5 row align-content-center">
    <div id="notifications" class="container fixed-top">
      <div class="alert alert-success fade show" role="alert">
        Message sent.
      </div>
      <div class="alert alert-danger fade show" role="alert">
      </div>
      <div class="alert alert-info fade show" role="alert">
        Sending message...
      </div>
    </div>
  </div>

  <h2>Get in touch</h2>
  <p> Please fill out all fields. </p>
  <form role="form" method="post" action="#/message">
    <div class="row">
      <div class="col-sm-6 form-group">
        <label for="name"> Name:</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="col-sm-6 form-group">
        <label for="email"> Email:</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 form-group">
        <label for="subject"> Subject:</label>
        <input type="text" class="form-control" name="subject" id="subject" required>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 form-group">
        <label for="message"> Message:</label>
        <textarea class="form-control" type="textarea" name="message" id="message" maxlength="500" rows="6" required></textarea>
        <div id="c-count" class="text-right">0/500</div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 form-group">
        <button type="submit" class="btn btn-dark" data-toggle="button">Send</button>
      </div>
    </div>
  </form>
</div>
<div class="p-4"></div>
{{>footer}}